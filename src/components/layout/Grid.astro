---
/**
 * Grid Component
 * Responsive grid layout with configurable columns
 */
interface Props {
  cols?: 1 | 2 | 3 | 4 | 'auto';
  gap?: 'sm' | 'md' | 'lg' | 'xl';
  class?: string;
}

const { cols = 'auto', gap = 'md', class: className = '' } = Astro.props;

const colClasses = {
  1: 'grid-cols-1',
  2: 'grid-cols-1 md:grid-cols-2',
  3: 'grid-cols-1 md:grid-cols-2 lg:grid-cols-3',
  4: 'grid-cols-1 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4',
  auto: 'grid-cols-[repeat(auto-fill,minmax(min(100%,320px),1fr))]'
};

const gapClasses = {
  sm: 'gap-3',
  md: 'gap-6',
  lg: 'gap-8',
  xl: 'gap-12'
};
---

<div class={`grid ${colClasses[cols]} ${gapClasses[gap]} ${className}`}>
  <slot />
</div>
