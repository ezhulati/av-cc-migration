---
/**
 * Stack Component
 * Vertical or horizontal spacing between elements
 */
interface Props {
  direction?: 'vertical' | 'horizontal';
  spacing?: 'xs' | 'sm' | 'md' | 'lg' | 'xl';
  align?: 'start' | 'center' | 'end' | 'stretch';
  justify?: 'start' | 'center' | 'end' | 'between';
  class?: string;
}

const {
  direction = 'vertical',
  spacing = 'md',
  align = 'stretch',
  justify = 'start',
  class: className = ''
} = Astro.props;

const spacingMap = {
  xs: '0.5rem',
  sm: '1rem',
  md: '1.5rem',
  lg: '2rem',
  xl: '3rem'
};

const alignMap = {
  start: 'flex-start',
  center: 'center',
  end: 'flex-end',
  stretch: 'stretch'
};

const justifyMap = {
  start: 'flex-start',
  center: 'center',
  end: 'flex-end',
  between: 'space-between'
};

const isVertical = direction === 'vertical';
---

<div
  class={`stack ${className}`}
  style={`
    display: flex;
    flex-direction: ${isVertical ? 'column' : 'row'};
    gap: ${spacingMap[spacing]};
    align-items: ${alignMap[align]};
    justify-content: ${justifyMap[justify]};
  `}
>
  <slot />
</div>
