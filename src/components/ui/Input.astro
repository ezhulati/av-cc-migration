---
/**
 * Input Component
 * Form input with consistent styling
 */
interface Props {
  type?: 'text' | 'email' | 'search' | 'password' | 'number';
  placeholder?: string;
  value?: string;
  id?: string;
  name?: string;
  required?: boolean;
  size?: 'sm' | 'md' | 'lg';
  class?: string;
}

const {
  type = 'text',
  placeholder,
  value,
  id,
  name,
  required = false,
  size = 'md',
  class: className = ''
} = Astro.props;

const sizeClasses = {
  sm: 'px-3 py-2 text-sm',
  md: 'px-4 py-3 text-base',
  lg: 'px-6 py-4 text-lg'
};
---

<input
  type={type}
  placeholder={placeholder}
  value={value}
  id={id}
  name={name}
  required={required}
  class={`input ${sizeClasses[size]} ${className}`}
/>

<style>
  .input {
    width: 100%;
    border: 2px solid #e0e0e0;
    border-radius: 8px;
    font-family: inherit;
    transition: all 0.2s;
    background: white;
  }

  .input:focus {
    outline: none;
    border-color: var(--color-primary);
    box-shadow: 0 0 0 3px rgba(220, 20, 60, 0.1);
  }

  .input::placeholder {
    color: #999;
  }
</style>
