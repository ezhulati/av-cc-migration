---
import { getCollection } from 'astro:content';

const posts = await getCollection('posts', ({ data }) => {
  return data.language === 'en';
});
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Discover Albania - Your Complete Travel Guide" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>AlbaniaVisit - Discover Albania</title>
  </head>
  <body>
    <h1>AlbaniaVisit.com</h1>
    <p>Welcome to the new AlbaniaVisit.com - Migration in Progress</p>

    <h2>Recent Posts</h2>
    <ul>
      {posts.slice(0, 5).map(post => (
        <li>
          <a href={`/${post.data.slug}/`}>{post.data.title}</a>
        </li>
      ))}
    </ul>
  </body>
</html>
