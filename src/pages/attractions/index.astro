---
/**
 * Attractions Archive Page
 * Lists all attractions and points of interest
 */

import { getCollection } from 'astro:content';
import BaseLayout from '../../layouts/BaseLayout.astro';

const attractions = await getCollection('attractions', ({ data }) => {
  return !data.language || data.language === 'en';
});

// Sort by title
const sortedAttractions = attractions.sort((a, b) =>
  a.data.title.localeCompare(b.data.title)
);

// Group by type if available
const byType: Record<string, typeof attractions> = {};
sortedAttractions.forEach(attraction => {
  const type = attraction.data.type || 'Other Attractions';
  if (!byType[type]) byType[type] = [];
  byType[type].push(attraction);
});
---

<BaseLayout
  title="Attractions & Points of Interest in Albania | Visit Albania"
  description="Explore Albania's top attractions, from UNESCO World Heritage sites to natural wonders and historic landmarks."
  canonical="https://albaniavisit.com/attractions/"
>
  <div class="attractions-archive">
    <!-- Hero Section -->
    <header class="page-header">
      <div class="header-content">
        <h1>Attractions in Albania</h1>
        <p class="subtitle">
          Discover Albania's most remarkable attractions, from ancient castles and UNESCO sites to stunning natural wonders.
        </p>

        <div class="header-stats">
          <div class="stat">
            <span class="stat-value">{sortedAttractions.length}</span>
            <span class="stat-label">Attractions</span>
          </div>
          <div class="stat">
            <span class="stat-value">{Object.keys(byType).length}</span>
            <span class="stat-label">Categories</span>
          </div>
        </div>
      </div>
    </header>

    <!-- Attractions Grid -->
    <section class="content-section">
      <div class="container">
        {Object.entries(byType).map(([type, attrs]) => (
          <div class="type-section">
            <h2>{type}</h2>
            <div class="attractions-grid">
              {attrs.map(attraction => (
                <a href={`/attractions/${attraction.slug}/`} class="attraction-card">
                  {attraction.data.featuredImage && (
                    <div class="card-image">
                      <img
                        src={attraction.data.featuredImage}
                        alt={attraction.data.title}
                        loading="lazy"
                      />
                    </div>
                  )}
                  <div class="card-content">
                    <h3>{attraction.data.title}</h3>
                    <p>{attraction.data.description}</p>
                    <div class="meta">
                      {attraction.data.type && (
                        <div class="type-badge">
                          <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                            <path d="M3 9l9-7 9 7v11a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2z"></path>
                          </svg>
                          <span>{attraction.data.type}</span>
                        </div>
                      )}
                      {attraction.data.location && (
                        <div class="location-badge">
                          <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                            <path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0z"></path>
                            <circle cx="12" cy="10" r="3"></circle>
                          </svg>
                          <span>{attraction.data.location}</span>
                        </div>
                      )}
                    </div>
                  </div>
                </a>
              ))}
            </div>
          </div>
        ))}
      </div>
    </section>
  </div>
</BaseLayout>

<style>
  .attractions-archive {
    background: #fafafa;
  }

  /* Header */
  .page-header {
    background: linear-gradient(135deg, #1a1a1a 0%, #2d2d2d 100%);
    color: white;
    padding: 60px 0 80px;
    position: relative;
    overflow: hidden;
  }

  .page-header::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: url("data:image/svg+xml,%3Csvg width='60' height='60' viewBox='0 0 60 60' xmlns='http://www.w3.org/2000/svg'%3E%3Cg fill='none' fill-rule='evenodd'%3E%3Cg fill='%23ffffff' fill-opacity='0.05'%3E%3Cpath d='M36 34v-4h-2v4h-4v2h4v4h2v-4h4v-2h-4zm0-30V0h-2v4h-4v2h4v4h2V6h4V4h-4zM6 34v-4H4v4H0v2h4v4h2v-4h4v-2H6zM6 4V0H4v4H0v2h4v4h2V6h4V4H6z'/%3E%3C/g%3E%3C/g%3E%3C/svg%3E");
    opacity: 0.1;
  }

  .header-content {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 24px;
    position: relative;
    z-index: 1;
  }

  .page-header h1 {
    font-size: 48px;
    font-weight: 800;
    margin: 0 0 16px 0;
    letter-spacing: -0.5px;
  }

  .subtitle {
    font-size: 18px;
    line-height: 1.6;
    color: rgba(255, 255, 255, 0.9);
    max-width: 700px;
    margin: 0 0 32px 0;
  }

  .header-stats {
    display: flex;
    gap: 48px;
    flex-wrap: wrap;
  }

  .stat {
    display: flex;
    flex-direction: column;
    gap: 4px;
  }

  .stat-value {
    font-size: 32px;
    font-weight: 700;
    color: #e31c2a;
  }

  .stat-label {
    font-size: 14px;
    color: rgba(255, 255, 255, 0.7);
    text-transform: uppercase;
    letter-spacing: 0.5px;
  }

  .content-section {
    padding: 3rem 2rem;
  }

  .container {
    max-width: 1200px;
    margin: 0 auto;
  }

  .type-section {
    margin-bottom: 4rem;
  }

  .type-section:last-child {
    margin-bottom: 0;
  }

  .type-section h2 {
    font-size: 2rem;
    margin: 0 0 2rem 0;
    color: #2c3e50;
    border-bottom: 3px solid #16a085;
    padding-bottom: 0.5rem;
  }

  .attractions-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(320px, 1fr));
    gap: 2rem;
  }

  .attraction-card {
    display: block;
    background: white;
    border-radius: 8px;
    overflow: hidden;
    box-shadow: 0 2px 8px rgba(0,0,0,0.1);
    transition: transform 0.2s, box-shadow 0.2s;
    text-decoration: none;
    color: inherit;
  }

  .attraction-card:hover {
    transform: translateY(-4px);
    box-shadow: 0 4px 16px rgba(0,0,0,0.15);
  }

  .card-image {
    aspect-ratio: 16 / 10;
    overflow: hidden;
    background: #f0f0f0;
  }

  .card-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s;
  }

  .attraction-card:hover .card-image img {
    transform: scale(1.05);
  }

  .card-content {
    padding: 1.5rem;
  }

  .card-content h3 {
    margin: 0 0 0.75rem 0;
    font-size: 1.5rem;
    color: #2c3e50;
  }

  .card-content p {
    margin: 0 0 1rem 0;
    color: #666;
    line-height: 1.6;
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .meta {
    display: flex;
    flex-wrap: wrap;
    gap: 1rem;
  }

  .type-badge,
  .location-badge {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    color: #16a085;
    font-size: 0.875rem;
    font-weight: 500;
  }

  .type-badge svg,
  .location-badge svg {
    flex-shrink: 0;
  }

  @media (max-width: 968px) {
    .page-header h1 {
      font-size: 36px;
    }

    .subtitle {
      font-size: 16px;
    }

    .header-stats {
      gap: 32px;
    }

    .stat-value {
      font-size: 28px;
    }
  }

  @media (max-width: 768px) {
    .page-header {
      padding: 40px 0 60px;
    }

    .page-header h1 {
      font-size: 28px;
    }

    .attractions-grid {
      grid-template-columns: 1fr;
    }
  }
</style>
