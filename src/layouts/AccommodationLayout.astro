---
/**
 * Accommodation Layout
 * Template for accommodation listings
 */

import BaseLayout from './BaseLayout.astro';
import type { CollectionEntry } from 'astro:content';

export interface Props {
  accommodation: CollectionEntry<'accommodation'>;
}

const { accommodation } = Astro.props;
const { Content } = await accommodation.render();

const {
  title,
  description,
  location,
  featuredImage,
  images,
  amenities,
  price,
  rating,
  bookingURL,
  language,
  slug,
} = accommodation.data;
---

<BaseLayout
  title={title}
  description={description}
  canonical={`https://albaniavisit.com/${language === 'sq' ? 'sq/akomodimi' : 'accommodation'}/${slug}/`}
  image={featuredImage}
  type="website"
  language={language}
>
  <article class="accommodation">
    <div class="container-custom max-w-7xl">
      <!-- Breadcrumbs -->
      <nav class="breadcrumbs" aria-label="Breadcrumb">
        <ol>
          <li><a href={language === 'sq' ? '/sq/' : '/'}>Home</a></li>
          <li><a href={language === 'sq' ? '/sq/akomodimi/' : '/accommodation/'}>Accommodation</a></li>
          {location && <li>{location}</li>}
          <li aria-current="page">{title}</li>
        </ol>
      </nav>

      <!-- Header -->
      <header class="accommodation-header">
        <div class="header-content">
          <h1 class="accommodation-title">{title}</h1>

          <div class="accommodation-meta">
            {location && (
              <span class="location">
                üìç {location}
              </span>
            )}
            {rating && (
              <span class="rating">
                ‚≠ê {rating}/5
              </span>
            )}
            {price && (
              <span class="price">
                üí∞ {price}
              </span>
            )}
          </div>
        </div>

        {bookingURL && (
          <div class="booking-cta">
            <a href={bookingURL} class="book-now-btn" target="_blank" rel="nofollow">
              {language === 'sq' ? 'Rezervo Tani' : 'Book Now'}
            </a>
          </div>
        )}
      </header>

      <!-- Image Gallery -->
      {(featuredImage || (images && images.length > 0)) && (
        <div class="accommodation-gallery">
          {featuredImage && (
            <div class="featured-image">
              <img
                src={featuredImage}
                alt={title}
                loading="eager"
              />
            </div>
          )}

          {images && images.length > 0 && (
            <div class="gallery-grid">
              {images.slice(0, 4).map((img) => (
                <div class="gallery-item">
                  <img src={img} alt={title} loading="lazy" />
                </div>
              ))}
            </div>
          )}
        </div>
      )}

      <!-- Content -->
      <div class="accommodation-content">
        <div class="main-content">
          <section class="description">
            <h2>{language === 'sq' ? 'P√´rshkrimi' : 'Description'}</h2>
            <Content />
          </section>

          {amenities && amenities.length > 0 && (
            <section class="amenities">
              <h2>{language === 'sq' ? 'Leht√´sirat' : 'Amenities'}</h2>
              <ul class="amenities-list">
                {amenities.map((amenity) => (
                  <li>‚úì {amenity}</li>
                ))}
              </ul>
            </section>
          )}
        </div>

        <aside class="sidebar">
          {bookingURL && (
            <div class="booking-card">
              <h3>{language === 'sq' ? 'Rezervo K√´t√´ Akomodim' : 'Book This Accommodation'}</h3>
              {price && <p class="card-price">{price}</p>}
              <a href={bookingURL} class="book-btn" target="_blank" rel="nofollow">
                {language === 'sq' ? 'Kontrollo Disponueshm√´rin√´' : 'Check Availability'}
              </a>
            </div>
          )}

          {location && (
            <div class="location-card">
              <h3>{language === 'sq' ? 'Vendndodhja' : 'Location'}</h3>
              <p>{location}</p>
              {/* TODO: Add map integration */}
            </div>
          )}
        </aside>
      </div>
    </div>
  </article>
</BaseLayout>

<style>
  .accommodation {
    @apply py-12 md:py-16 lg:py-20;
  }

  /* Breadcrumbs */
  .breadcrumbs {
    @apply mb-8 text-sm;
  }

  .breadcrumbs ol {
    @apply flex flex-wrap gap-2 list-none;
  }

  .breadcrumbs li:not(:last-child)::after {
    content: '‚Ä∫';
    @apply ml-2 text-muted-foreground;
  }

  .breadcrumbs a {
    @apply text-primary no-underline hover:underline;
  }

  /* Header */
  .accommodation-header {
    @apply flex justify-between items-start gap-8 mb-12 flex-wrap;
  }

  .accommodation-title {
    @apply text-4xl md:text-5xl font-bold tracking-tight mb-4 text-foreground;
  }

  .accommodation-meta {
    @apply flex flex-wrap gap-6 text-base text-foreground;
  }

  .location, .rating, .price {
    @apply flex items-center gap-2 bg-muted px-4 py-2 rounded-lg;
  }

  .book-now-btn {
    @apply inline-flex items-center justify-center gap-2 whitespace-nowrap rounded-md font-medium transition-colors;
    @apply bg-primary text-primary-foreground shadow hover:bg-primary/90 px-6 py-3 text-lg;
  }

  /* Gallery */
  .accommodation-gallery {
    @apply mb-12;
  }

  .featured-image {
    @apply mb-4 rounded-xl overflow-hidden shadow-xl;
  }

  .featured-image img {
    @apply w-full h-auto max-h-[500px] object-cover;
  }

  .gallery-grid {
    @apply grid grid-cols-2 md:grid-cols-4 gap-4;
  }

  .gallery-item {
    @apply rounded-lg overflow-hidden aspect-[4/3] hover:opacity-80 transition-opacity cursor-pointer;
  }

  .gallery-item img {
    @apply w-full h-full object-cover;
  }

  /* Content */
  .accommodation-content {
    @apply grid lg:grid-cols-[1fr_350px] gap-12;
  }

  .main-content {
    @apply min-w-0;
  }

  .description {
    @apply mb-12;
  }

  .description h2,
  .amenities h2 {
    @apply text-3xl font-semibold tracking-tight mb-6 text-foreground;
  }

  .description :global(p) {
    @apply mb-4 leading-8 text-lg;
  }

  .amenities-list {
    @apply list-none grid grid-cols-1 md:grid-cols-2 gap-3;
  }

  .amenities-list li {
    @apply px-4 py-3 bg-muted rounded-lg flex items-center gap-2 transition-all hover:bg-muted/80;
  }

  /* Sidebar */
  .sidebar {
    @apply sticky top-24 h-fit;
  }

  .booking-card,
  .location-card {
    @apply rounded-lg border bg-card text-card-foreground shadow-sm p-6 mb-6;
  }

  .booking-card h3,
  .location-card h3 {
    @apply text-xl font-semibold mb-4 text-foreground;
  }

  .card-price {
    @apply text-3xl font-bold text-primary mb-6;
  }

  .book-btn {
    @apply inline-flex items-center justify-center gap-2 whitespace-nowrap rounded-md font-medium transition-colors;
    @apply bg-primary text-primary-foreground shadow hover:bg-primary/90 px-6 py-3 w-full;
  }

  /* Responsive */
  @media (max-width: 1024px) {
    .accommodation-content {
      @apply grid-cols-1;
    }

    .sidebar {
      @apply static;
    }
  }

  @media (max-width: 768px) {
    .accommodation-header {
      @apply flex-col;
    }

    .book-now-btn {
      @apply w-full text-center;
    }

    .accommodation-title {
      @apply text-3xl;
    }
  }
</style>
